<div id="accordion">
  {{#each user.result}}
  <div data-name={{_id}}>
    <h3>
      {{{this.topic}}}
      <div class="pull-right">
        <label class="radio-inline">            
           {{#Compare "1" this.status}}
             <input type="radio" name="blogGroup_{{@index}}" checked="checked" value="1"/>
           {{else}} 
         <input type="radio" name="blogGroup_{{@index}}" value="1"/>
          {{/Compare}}
          Approve
        </label>

        <label class="radio-inline">            
           {{#Compare "2" this.status}}
             <input type="radio" name="blogGroup_{{@index}}" checked="checked" value="2"/>
           {{else}} 
         <input type="radio" name="blogGroup_{{@index}}" value="2"/>
          {{/Compare}}
          Reject
        </label>
        <label class="radio-inline">            
           {{#Compare "0" this.status}}
             <input type="radio" name="blogGroup_{{@index}}" checked="checked" value="3"/>
           {{else}} 
         <input type="radio" name="blogGroup_{{@index}}" value="3"/>
          {{/Compare}}
          Pending
        </label>
        <button type="button" class="btn btn-primary btn-xs userBlogDataColumn">Update</button>
      </div>
    </h3>
    <div>
      {{{content}}}
    </div>
  </div>
  {{/each}}
</div>