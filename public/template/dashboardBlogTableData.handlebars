
<div id="accordion">
  {{#each user}} {{#each this}}
  <div data-name={{_id}}>
    <h3>
      {{{topic}}}
      <div class="pull-right">
        <label class="radio-inline">
          {{#if status}}
          <input type="radio" name="blogGroup" value="1"/>Approve
        </label>
        <label class="radio-inline">
          <input type="radio" name="blogGroup" value="2"/>Reject
        </label>
        <label class="radio-inline">
          <input type="radio" name="blogGroup" value="3"/>Pending
        </label>
        {{!-- <span class="label label-primary">Primary</span> --}}
        <button type="button" class="btn btn-primary btn-xs userBlogDataColumn">Update</button>
      </div>
    </h3>
    <div>
      {{{content}}}
    </div>
  </div>

  {{/each}} {{/each}}
</div>

