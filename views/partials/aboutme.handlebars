<div class="panel panel-info profile-content-panel-border-radius bg-form">
    <div class="panel-edit-checker text-right">
        <h4><span class="glyphicon glyphicon-edit"></span></h4>
        <input type="checkbox" class="form-control" id="checkeraboutme" value="true" />
    </div>
    <div class="panel-body">
        <div class="amsuccesspanel alert alert-dismissible alert-success hidden">
            {{!-- <button type="button" class="close" data-dismiss="alert">&times;</button> --}}
            <strong>Thank you!</strong> You have successfully updated about yourself.
        </div>
        <div class="amerrorpanel hidden"></div>
        <form id="frmaboutme">
            <div class="form-group">
                <textarea class="form-control" name="aboutme" id="aboutme" 
                placeholder="Let us know about yourself..." 
                autofocus="autofocus">{{#if aboutme}}{{aboutme.content}}{{/if}}</textarea>
            </div>
            <div class="form-group hidden saveaboutmeinfo text-right">
                <button type="submit" class="btn btn-info btn-sm">Save</button>
                <button type="reset" class="btn btn-warning btn-sm hidefrmaboutme">Cancel</button>
            </div>

            {{#if aboutme}}
            <input type="hidden" id='userid' name='userid' value="{{aboutme.userid}}">
            <input type="hidden" id='_id' name='_id' value="{{aboutme._id}}"> {{else}}
            <input type="hidden" id='userid' name='userid' value="{{user._id}}">
            <input type="hidden" id='_id' name='_id' value=""> {{/if}}
        </form>
    </div>
</div>