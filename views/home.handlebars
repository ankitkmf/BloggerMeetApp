<div class="bs-docs-section">
    <div class="row">
        <div class="col-lg-8">
            <div class="bs-component blogdata">
                {{#each blogs.result}}

                <div>

                    <!-- Title ,Author ,Date/Time-->
                    <h3 class="h3-responsive"><a href="/viewblog/showdetails/{{this._id}}">
                    <img border="0" src="/images/article.png" title="article"></a>{{this.topic}}</h3>
                    <p>Written by <a href="#">{{this.createdby}}</a>,
                        <span></span> Posted on {{this.creationdate}}</p>

                    <!--Content-->
                    <span class="limitblogdata">{{{this.content}}}</span>

                    <!--"Read more" button-->
                    <a href="/viewblog/showdetails/{{this._id}}"><button class="btn btn-info">Read more</button></a>
                </div>
                <hr> {{/each}} {{#if index}}
                <input type="hidden" name="nextsearindex" id="nextsearindex" value={{index}} /> {{/if}}
            </div>
            <div id="divImage" class="hidden">
                <img style="height: 20px; width: 20px;" id="loadmoreblog" name="loadmoreblog" alt="Load More" src="/images/loadmore.png"
                />
                <br/>
                <br/>
            </div>
        </div>
